<cu-custom bgColor="bg-gradual-green" isCustom="{{true}}"><view slot="content">订单列表</view></cu-custom>
<scroll-view scroll-x class="bg-white nav">
  <view class="flex text-center">
    <view class="cu-item flex-sub text-green" bindtap="tabSelect">
      <navigator url='../myorder/myorder'>
      全部
      </navigator>
    </view>
    <view class="cu-item flex-sub" bindtap="tabSelect">
      <navigator url='../witeorder/witeorder'>
      待配送
      </navigator>
    </view>
    <view class="cu-item flex-sub " bindtap="tabSelect">
      <navigator url='../overorder/overorder'>
        已送达
      </navigator>
    </view>
  </view>
</scroll-view>

<view class="cu-card article" style='margin-bottom:-30rpx;'>
  <view class="cu-item shadow">
    <view class="title">
      <view class="text-cut">
        <text class='text-green'>南京工业大学水果铺开业了</text>
        <text class='text-grey' style='margin-left:20rpx;font-size:25rpx;'>订单号：1234567890</text>
      </view>
    </view>
    <view class='bg-grey flex flex-wrap' style='height:0.3rpx;'></view>
    <view class="content">
      <view class="desc">
        <view class="text-content" style=''>
          <view class="flex flex-wrap margin-top">
            <view class="flex-twice text-grey radius">山东樱桃300g/份等5个商品</view>
            <view class="flex-sub text-red radius">¥10.00</view>
          </view>
          <view class="flex flex-wrap">
            <view class="flex-twice text-grey  radius">2019-05-01 10:01</view>
            <view class="flex-sub radius text-red">订单已完成</view>
          </view>
        </view>
        <view>
          <view class="cu-tag bg-red light">删除订单</view>
          <view class="cu-tag bg-green light">再来一单</view>
          <view class="cu-tag bg-blue light">立即评价</view>
        </view>
      </view>
    </view>
  </view>
</view>

